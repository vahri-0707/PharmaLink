<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/shape_dispatch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingLeft="14dp"
            android:text="Yoangga Achmad"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/statusColor"
            app:layout_constraintTop_toTopOf="@+id/statusColor" />

        <TextView
            android:id="@+id/statusMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="-3.5dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Not Recieved"
            android:textColor="@color/red"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/statusColor"
            app:layout_constraintStart_toStartOf="@+id/customerName" />

        <androidx.cardview.widget.CardView
            android:id="@+id/statusColor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="16dp"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/red"
            app:cardCornerRadius="7dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                app:srcCompat="@drawable/ic_status" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>